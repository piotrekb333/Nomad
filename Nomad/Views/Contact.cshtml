@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@using Nomad.Controllers
@{
    Layout = "Master.cshtml";
}

@if (ViewBag.WasSent != null && (Convert.ToBoolean(ViewBag.WasSent)) == true)
{
    <div class="alert alert-success" role="alert">
        Your message was sent!
    </div>
}

@using (Html.BeginUmbracoForm<ContactController>("Contact", FormMethod.Post))
{
    <div class="form-group">
        <label for="exampleInputEmail1">@Umbraco.GetDictionaryValue("Title")</label>
        <input type="text" class="form-control" id="Title" name="Title" aria-describedby="titleHelp" placeholder="@Umbraco.GetDictionaryValue("Title")">
    </div>
    <div class="form-group">
        <label for="exampleTextarea">@Umbraco.GetDictionaryValue("Message")</label>
        <textarea class="form-control" id="Body" name="Body" rows="3"></textarea>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">@Umbraco.GetDictionaryValue("Email address")</label>
        <input type="text" class="form-control" id="Email" name="Email" aria-describedby="emailHelp" placeholder="@Umbraco.GetDictionaryValue("Email address")">
    </div>
    <button type="submit" class="btn btn-primary">@Umbraco.GetDictionaryValue("Submit")</button>
}