@using Nomad.Models.ArticleModels
@using Umbraco.Core
@using Nomad.Helpers;
@model IEnumerable<ArticleModel>
@{
    Layout = null;
    int i = 0;
}








<!-- Blogs -->
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="blog_posts stander_blog one_colo_stander_blog">
                @foreach (var item in Model)
                {
                    var body = HtmlRemoval.StripTagsRegex(item.Body);
                    string[] words = body.Split();
                    var wordsString = words.Take(5);
                    string subTitle = string.Join(" ", wordsString) + " ...";
                    if (string.IsNullOrEmpty(subTitle))
                    {
                        subTitle = "More...";
                    }
                    <article>
                        <h3 class="post_title">
                            <a href="@item.SiteUrl">@Html.Raw(item.Title)</a>
                        </h3>
                        <div class="post_meta_top">
                            <span class="post_meta_date">@(item.DatePublished.HasValue ? item.DatePublished.Value.ToString("MMM dd, yyyy") : "")</span>
                        </div>
                        <div class="post_content">
                            <p>
                                @subTitle
                            </p>
                        </div>
                        <div class="post_meta_bottom">
                            <div class="row">
                                <div class="col-md-6">
                                    <a class="post_read_more d-block" href="@item.SiteUrl">
                                        Read More
                                        <i class="far fa-long-arrow-right" aria-hidden="true"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </article>
                    <hr>
                }
                </div>
         </div>
     </div>
</div>